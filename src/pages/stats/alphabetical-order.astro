---
import StatsWordListPage from '~components/StatsWordListPage.astro';
import { getAllWords } from '~utils/word-data-utils';
import { getLetterPatternStats } from '~utils/word-stats-utils';

export async function getStaticPaths() {
  const words = getAllWords();
  const letterPatterns = getLetterPatternStats(words);
  const alphabeticalWords = letterPatterns.alphabetical;

  const showEmptyPages = __SHOW_EMPTY_STATS__;
  return (showEmptyPages || alphabeticalWords.length > 0) ? [{}] : [];
}

const words = getAllWords();
const letterPatterns = getLetterPatternStats(words);
const alphabeticalWords = letterPatterns.alphabetical;
---

<StatsWordListPage
  words={alphabeticalWords}
  descriptionText="Words with three or more consecutive letters in alphabetical order."
/>