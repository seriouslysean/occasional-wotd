---
import WordPage from '~components/WordPage.astro';
import { allWords, getWordByDate } from '~utils-client/word-data-utils';

export async function getStaticPaths() {
  const paths = [];

  for (const wordData of allWords) {
    paths.push({ params: { word: wordData.word }, props: { date: wordData.date } });
  }

  return paths;
}

const { date } = Astro.props;
const wordData = getWordByDate(date);
---

<WordPage wordData={wordData} />
