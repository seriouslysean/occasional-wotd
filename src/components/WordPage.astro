---
import WordComponent from '~components/Word.astro';
import WordNav from '~components/WordNav.astro';
import Layout from '~layouts/Layout.astro';
import type { WordData } from '~types/word';
import { STRUCTURED_DATA_TYPE } from '~utils-client/schema-utils.ts';
import { getMetaDescription } from '~utils-client/seo-utils.ts';
import { extractWordDefinition } from '~utils-client/word-data-utils';

interface Props {
  wordData: WordData;
  previousWord?: WordData | null;
  nextWord?: WordData | null;
  canonicalUrl?: string;
  structuredDataType?: string;
}

const { wordData, previousWord, nextWord, canonicalUrl, structuredDataType = STRUCTURED_DATA_TYPE.WORD_SINGLE } = Astro.props;

if (!wordData) {
  return Astro.redirect('/404');
}

// Extract definition using shared utility
const { definition } = extractWordDefinition(wordData);
const pageDescription = getMetaDescription({
  word: wordData.word,
  definition,
});
---

<Layout
  title={wordData.word}
  word={wordData}
  description={pageDescription}
  structuredDataType={structuredDataType}
  canonicalUrl={canonicalUrl}
>

    <WordComponent word={wordData} />
    <WordNav
      previousWord={previousWord}
      nextWord={nextWord}
      previousLabel="Previous Word"
      nextLabel="Next Word"
      ariaLabel="Word navigation"
    />

</Layout>
