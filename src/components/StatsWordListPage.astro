---
import DescriptionText from '~components/DescriptionText.astro';
import Heading from '~components/Heading.astro';
import WordSection from '~components/WordSection.astro';
import Layout from '~layouts/Layout.astro';
import type { WordData } from '~types/word';
import { getPageMetadata } from '~utils-client/page-metadata.ts';
import { STRUCTURED_DATA_TYPE } from '~utils-client/schema-utils.ts';
import { formatWordCount } from '~utils-client/text-utils';

interface Props {
  words: WordData[];
  descriptionText: string;
  columns?: number;
}

const { words, descriptionText, columns = 2 } = Astro.props;
const { title, description } = getPageMetadata(Astro.url.pathname);
---

<Layout
  title={title}
  description={description}
  structuredDataType={STRUCTURED_DATA_TYPE.WORD_LIST}
>
  <Heading text={title} secondaryText={formatWordCount(words.length)} />
  <DescriptionText text={descriptionText} />
  <WordSection words={words} columns={columns} />
</Layout>