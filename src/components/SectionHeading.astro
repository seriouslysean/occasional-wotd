---
import SiteLink from '~components/SiteLink.astro';

interface Props {
  text: string;
  href?: string;
  align?: 'left' | 'center' | 'right';
  underline?: boolean;
}

const { text, href, align = 'left', underline = true } = Astro.props;
---

{href ? (
  <h2 class:list={['section-heading', `section-heading--${align}`, { 'section-heading--underline': underline }]}>
    <SiteLink href={href} class="section-heading__link">{text}</SiteLink>
  </h2>
) : (
  <h2 class:list={['section-heading', `section-heading--${align}`, { 'section-heading--underline': underline }]}>{text}</h2>
)}

<style>
    .section-heading {
        font-size: var(--font-size-base);
        color: var(--color-text-primary);
        padding-bottom: 0.5rem;
        margin-bottom: var(--spacing-base);
    }

    .section-heading--underline {
        border-bottom: 1px solid var(--color-text-primary);
    }

    .section-heading--left {
        text-align: left;
    }

    .section-heading--center {
        text-align: center;
    }

    .section-heading--right {
        text-align: right;
    }

    .section-heading__link {
        color: inherit;
        text-decoration: none;
        transition: opacity 0.2s ease;
    }

    .section-heading__link:hover {
        text-decoration: none;
    }
</style>
