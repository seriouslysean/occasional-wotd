{
  "name": "occasional-wotd",
  "type": "module",
  "version": "1.5.4",
  "description": "Template for creating an occasional word of the day site",
  "keywords": [
    "word-of-the-day",
    "vocabulary",
    "learning",
    "astro",
    "static-site",
    "template"
  ],
  "author": "Sean Kennedy <sean@codeserious.com>",
  "license": "MIT",
  "scripts": {
    "dev": "astro dev",
    "start": "astro dev",
    "build": "astro build",
    "preview": "astro preview",
    "astro": "astro",
    "tool:add-word": "tsx tools/add-word.ts",
    "tool:generate-all-images": "npm run tool:generate-images && npm run tool:generate-images --generic",
    "tool:generate-images": "tsx tools/generate-images.ts",
    "tool:local": "tsx -r dotenv/config",
    "tool:ping-search-engines": "tsx tools/ping-search-engines.ts",
    "tool:regenerate-all-words": "tsx tools/regenerate-all-words.ts",
    "test": "vitest run",
    "test:silent": "vitest run --silent",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "typecheck": "astro check"
  },
  "dependencies": {
    "@types/yargs": "^17.0.33",
    "astro": "^5.10.1",
    "date-fns": "^4.1.0",
    "entities": "^6.0.1",
    "yargs": "^17.7.2"
  },
  "devDependencies": {
    "@astrojs/check": "^0.9.4",
    "@astrojs/sitemap": "^3.4.1",
    "@eslint/js": "^9.29.0",
    "@sentry/astro": "^9.32.0",
    "@vitest/coverage-v8": "^3.2.4",
    "dotenv": "^17.0.0",
    "eslint": "^9.29.0",
    "eslint-plugin-astro": "^1.3.1",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "globals": "^16.2.0",
    "opentype.js": "^1.3.4",
    "sharp": "^0.34.2",
    "tsx": "^4.20.3",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.35.0",
    "vitest": "^3.2.4"
  }
}
